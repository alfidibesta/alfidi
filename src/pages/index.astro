---
import { Image } from 'astro:assets';

import Layout from '../layouts/Layout.astro';
import CardBlog from '../components/CardBlog.astro';
import CardColor from '../components/CardColor.astro';
import imgUser from '../../public/stiker.png'
import img1 from '../../public/img1.jpeg'
import Button from '../components/Button.astro';

const socialMediaButtons = [
  { color: 'red', text: 'Instargram' },
  { color: 'blue', text: 'twiter' },
  { color: 'green', text: 'github' },
  { color: 'white', text: 'dribble' },
  { color: 'orange', text: 'linkedIn' },
];

const codingLanguages = [
  { color: 'red', text: 'PHP' },
  { color: 'blue', text: 'React JS' },
  { color: 'orange', text: 'Javascript' },
  { color: 'red', text: 'Laravel' },
  { color: 'white', text: 'CSS' },
  { color: 'green', text: 'Tailwinds' },
  { color: 'blue', text: 'Astro' }
