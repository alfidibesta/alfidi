            <CardColor color="orange">
                <p class="text-xl font-bold mb-3">Artikel yang baru baru üòÅ</p>
                <div class="flex flex-nowrap gap-3">
                    {blog.articles.slice(0, 2).map((blogs) => (
                        <div class="">
                            <CardBlog color="white" 
                            title={blogs.title} 
                            desc={blogs.desc}
                            link={blogs.link}>
                                <div class="aspect-video">
                                    <Image class="bg-cover rounded-lg border-green-700 border-4" src={img1} alt="" />
                                </div>
                            </CardBlog>
                        </div>
                    ))}
                </div>
                {blog.articles.length > 2 && (
                    <div class="mt-3">
                        <Button color="blue" href="/blog">
                            <p class="text-base font-normal">
                                Next
                                <span class="float-right">&rarr;</span>
                            </p>
                        </Button>
                    </div>
                )}
            </CardColor>
        </div>         -->

        <div class="flex flex-wrap my-3 w-full">
            <CardColor color="blue" class:list={["w-full"]}>
                <p class="text-xl font-bold mb-3">Follow ya...!</p>
                <div class="flex gap-3 flex-wrap container">
                    {socialMedia.socialMedia.map((button, index) => (
                        <div class={`sosmed ${index === 0 ? 'active' : ''}`}>
                            <Button color={button.color} href={button.link}>
                                <p class="text-base font-normal">{button.text}</p>
                            </Button>
                        </div>
                    ))}
                </div>
            </CardColor>
        </div>
    </main>
</Layout>